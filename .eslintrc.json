{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "eqeqeq": "off",
        "react/jsx-no-bind": "off",
        "react/no-deprecated": "error",
        "no-console": "off",
        "react/prop-types": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
